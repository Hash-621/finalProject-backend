<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.TEAM202507_01.menus.hospital.repository.HospitalMapper">

    <select id="findAll" resultType="HospitalDto">
        SELECT * FROM HOSPITALS
        ORDER BY ID DESC
    </select>

    <select id="findById" resultType="HospitalDto">
        SELECT * FROM HOSPITALS
        WHERE ID = #{id}
    </select>

    <select id="findInfo" resultType="HospitalMapDto">
        SELECT
               ID,
               NAME,
               TREAT_CATEGORY,
               ADDRESS,
               TEL
        FROM HOSPITALS
        ORDER BY ID DESC
    </select>

    <insert id="save" parameterType="HospitalDto" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO HOSPITALS (
            NAME,
            TREAT_CATEGORY,
            ADDRESS,
            TEL,
            EDIT_DATE
        ) VALUES (
                     #{name},
                     #{category},
                     #{address},
                     #{tel},
                     SYSDATE
                 )
    </insert>

    <update id="update" parameterType="HospitalDto">
        UPDATE HOSPITALS
        SET
            NAME = #{name},
            CATEGORY = #{category},
            ADDRESS = #{address},
            TEL = #{tel},
            IS_OPEN = #{isOpen},
            UPDATED_AT = SYSDATE
        WHERE ID = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        DELETE FROM HOSPITALS
        WHERE ID = #{id}
    </delete>

</mapper>